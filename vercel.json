{
  "routes": [
    {
      "src": "/api/:match*",
      "dest": "https://bbs.mobileapi.hupu.com/:match*"
    },
    {
      "src": "/source/:match*",
      "headers": {
        "Referer": "https://bbs.hupu.com/"
      },
      "dest": "https://i10.hoopchina.com.cn/:match*"
    },
    {
      "src": "/video/:match*",
      "headers": {
        "Referer": "https://bbs.hupu.com/"
      },
      "dest": "https://v.hoopchina.com.cn/:match*"
    }
  ]
}